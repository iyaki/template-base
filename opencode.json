{
	"$schema": "https://opencode.ai/config.json",
	"model": "github-copilot/gpt-5.2-codex",
	"small_model": "github-copilot/gpt-5-mini",
	"tui": {
		"scroll_acceleration": {
			"enabled": true
		}
	},
	"mcp": {
		"playwright": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"--network",
				"host",
				"mcp/playwright"
			],
			"enabled": true
		},
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"serena": {
			"type": "local",
			"command": [
				// "INTELEPHENSE_LICENSE_KEY=\"{file:/home/codespace/intelephense/licence.txt}\"",
				"uvx", "--from", "git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--project-from-cwd",
				"--open-web-dashboard", "false",
				"--context", "ide"
			],
			"enabled": false
		},
		"jam": {
			"type": "remote",
			"url": "https://mcp.jam.dev/mcp",
			"enabled": false
		},
		"gh_grep": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		},
		"github": {
			"type": "remote",
			"url": "https://api.githubcopilot.com/mcp/",
			"enabled": false
		},
		"gitmcp": {
			"type": "remote",
			"url": "https://gitmcp.io/docs",
			"enabled": true
		}
	},
	"formatter": {
	},
	"plugin": [
		"@tarquinen/opencode-dcp@latest",
		// "opencode-pty",
		// "oh-my-opencode@latest"
	],
	"keybinds": {
		"command_list": "ctrl+l"
	}
}
