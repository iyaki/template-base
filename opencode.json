{
	"$schema": "https://opencode.ai/config.json",
	"model": "github-copilot/gpt-5.2-codex",
	"small_model": "github-copilot/gpt-5-mini",
	"tui": {
		"scroll_acceleration": {
			"enabled": true
		}
	},
	"mcp": {
		"browser-automation": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"--network",
				"host",
				"mcp/playwright"
			],
			"enabled": true
		},
		"tech-docs": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		},
		"code-tools": {
			"type": "local",
			"command": [
				"uvx", "--from", "git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--project-from-cwd",
				"--open-web-dashboard", "false",
				"--context", "ide"
			],
			"environment": {
				// "INTELEPHENSE_LICENSE_KEY": "{file:/home/codespace/intelephense/licence.txt}"
			},
			"enabled": false
		},
		"web-search": {
			"type": "local",
			"command": [
				"npx", "-y", "open-websearch@latest",
				"serena",
				"start-mcp-server",
				"--project-from-cwd",
				"--open-web-dashboard", "false",
				"--context", "ide"
			],
			"environment": {
				"MODE": "stdio",
				"DEFAULT_SEARCH_ENGINE": "duckduckgo"
			},
			"enabled": true
		},
		"jam": {
			"type": "remote",
			"url": "https://mcp.jam.dev/mcp",
			"enabled": false
		},
		"code-examples": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		},
		"github": {
			"type": "remote",
			"url": "https://api.githubcopilot.com/mcp/",
			"enabled": false
		},
		"public-data": {
			"type": "remote",
			"url": "https://api.datacommons.org/mcp",
			"headers": {
				"X-API-Key": "{env:DATACOMMONS_API_KEY}"
			},
			"enabled": false
		},
		"repository-context": {
			"type": "remote",
			"url": "https://gitmcp.io/docs",
			"enabled": true
		}
	},
	"formatter": {
	},
	"keybinds": {
		"command_list": "ctrl+l"
	},
	"plugin": [
		"envsitter-guard@latest",
		"@slkiser/opencode-quota"
		// "opencode-mystatus",
		// "@tarquinen/opencode-dcp@latest",
		// "opencode-pty",
		// "oh-my-opencode@latest"
	],
	// "experimental": {
	// 	"quotaToast": {
	// 		"enabledProviders": [
	// 			"copilot",
	// 			// "openai",
	// 			// "google-antigravity"
	// 		]
	// 	}
	// }
}
